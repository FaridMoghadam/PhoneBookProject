@model IEnumerable<PhoneBookProject.Models.DepartmantList>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> معاونت ها </h2>

        </div>
        <div class="col-6 text-left">
            <a asp-controller="Departmant" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;معاونت جدید
            </a>
        </div>

    </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                       نام معاونت
                    </th>
                    <th>
                        موقعیت
                    </th>
                    <th></th>

                </tr>

            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Location</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">

                                <a asp-controller="Departmant" asp-route-Id="@obj.Id" asp-action="View" class="btn btn-outline-primary mx-1 ">
                                    <i class="fas fa-binoculars"></i>&nbsp; نمایش
                                </a>

                                <a asp-controller="Departmant" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-outline-secondary mx-1 ">
                                    <i class="fas fa-edit"></i> &nbsp; ویرایش
                                </a>

                                <a asp-controller="Departmant" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-1 ">
                                    <i class="fas fa-trash-alt"></i>&nbsp; حذف
                                </a>


                            </div>
                        </td>
                    </tr>



                 }
            </tbody>
        </table>
    }

    else
    {
        <p>No Data Exists.</p>
    }


</div>


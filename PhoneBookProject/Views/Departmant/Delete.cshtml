@model PhoneBookProject.Models.DepartmantList

<form method="post" asp-action="DeletePost">
    <input Asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">حذف</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name">معاونت</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
               
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Location">موقعیت</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Location"  disabled class="form-control" />
                      
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="حذف" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> بازگشت</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

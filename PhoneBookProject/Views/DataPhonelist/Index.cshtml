@model IEnumerable<PhoneBookProject.Models.DataPhonelist>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> مخاطبین</h2>
        </div>
        <div class="col-6 text-left">
            <a asp-action="Create" asp-controller="DataPhonelist" class="btn btn-primary">
               ثبت مخاطب جدید
            </a>           
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>نام</th>
                    <th>نام خانوادگی</th>
                    <th>معاونت</th>
                    <th>تلفن</th>
                    <th>تلفن همراه</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%">@obj.Fname</td>
                        <td width="20%">@obj.Lname</td>
                        <td width="15%">@obj.Departmant</td>
                        <td width="20%">@obj.PhoneNumber</td>
                        <td width="15%">@obj.CellPhone</td>
                        <td class="text-center">
                            <div class="w-100  btn-group" role="group">

                                <a asp-controller="DataPhonelist" asp-route-Id="@obj.Id" asp-action="View" class="btn btn-outline-primary mx-1 ">
                                    <i class="fas fa-binoculars"></i>&nbsp; نمایش
                                </a>

                                <a asp-controller="DataPhonelist" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-outline-secondary mx-1 ">
                                    <i class="fas fa-edit"></i> &nbsp; ویرایش
                                </a>

                                <a asp-controller="DataPhonelist" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-1 ">
                                    <i class="fas fa-trash-alt"></i>&nbsp; حذف
                                </a>

                            </div>
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
     }

    else
    {
        <p>No Data Exists.</p>
    }


</div>